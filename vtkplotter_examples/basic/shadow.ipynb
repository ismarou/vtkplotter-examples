    "\"\"\"Make a shadow of 2 meshes on the wall.\"\"\"\n",
    "from vtkplotter import *\n",
    "embedWindow('itk') # or k3d\n",
    "\n",
    "m = load(datadir+\"spider.ply\").normalize().rotateZ(-90).addShadow(x=-4)\n",
    "\n",
    "s = Sphere(pos=[-0.4, 1.4, 0.3], r=0.3).addShadow(x=-4)\n",
    "\n",
    "show(m, s, viewup='z')"
